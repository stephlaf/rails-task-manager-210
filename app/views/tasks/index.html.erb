<h1>The Tasks</h1>

<% @tasks.each do |task| %>
  <h3><%= link_to task.title, task_path(task) %></h3>
  <p><%= task.details %></p>
  <% if task.completed %>
    <i class="far fa-check-square"></i>
  <% else %>
    <i class="far fa-square"></i>
  <% end %>
  <p><%= link_to 'Delete task', task_path(task), method: :delete, data: {confirm: "Are you sure?"} %></p>
<% end %>

<p>
  <%= link_to 'Create a new task', new_task_path %>
</p>
